{
  "name": "bi-management-v3",
  "version": "3.0.0",
  "private": true,
  "description": "BI Management ERP - Monorepo (React 19, Hono, PostgreSQL, Drizzle)",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=@bi-management/api",
    "dev:web": "turbo run dev --filter=@bi-management/web",
    "db:generate": "turbo run db:generate --filter=@bi-management/database",
    "db:migrate": "turbo run db:migrate --filter=@bi-management/database",
    "db:seed": "turbo run db:seed --filter=@bi-management/database",
    "lint": "turbo run lint"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "turbo": "^2.3.0",
    "typescript": "^5.6.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.0.0",
  "engines": {
    "node": ">=18.0.0"
  }
}
